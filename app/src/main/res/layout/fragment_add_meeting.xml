<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeeting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <EditText
                    android:paddingEnd="15dp"
                    android:id="@+id/tittle_edtTXT"
                    android:layout_width="match_parent"
                    android:hint="Title"
                    android:paddingStart="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <EditText
                    android:paddingEnd="15dp"
                    android:id="@+id/description_txt"
                    android:layout_width="match_parent"
                    android:hint="Description"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <EditText
                    android:id="@+id/timerequired_txt"
                    android:layout_width="match_parent"
                    android:hint="Time Required"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/yellow"
                        android:fontFamily="@font/bold"
                        android:layout_marginTop="20dp"
                        android:text="Please Select Activity Type"/>
                </LinearLayout>
                <Spinner
                    android:background="@drawable/orangeoutline"
                    style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                    android:id="@+id/weight_spinner"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/bold"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="40dp" />
                <EditText
                    android:id="@+id/deadline_txt"
                    android:layout_width="match_parent"
                    android:hint="Date"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:paddingEnd="15dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/orangeoutline">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Add This to deadlines?"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="end"
                        android:layout_marginHorizontal="20dp">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_gravity="end"
                            android:id="@+id/toggleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:onClick="onToggleClick"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/orangeoutline">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Remind Me"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp">
                        <RadioGroup
                            android:gravity="end"
                            android:id="@+id/radiogroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/threetimes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:elevation="3dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:paddingHorizontal="7dp"
                                android:text="3 Times"
                                android:layout_marginVertical="10dp"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                            <RadioButton
                                android:id="@+id/fivetimes"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:elevation="3dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center"
                                android:paddingHorizontal="7dp"
                                android:text="5 Times"
                                android:layout_marginVertical="10dp"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:id="@+id/meetinglink"
                    android:layout_width="match_parent"
                    android:hint="Meeting Link"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <EditText
                    android:id="@+id/edt_rel_activity"
                    android:layout_width="match_parent"
                    android:hint="Is Related to which activity?"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/yellow"
                    android:layout_marginHorizontal="20dp"
                    android:paddingEnd="15dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/orangeoutline"/>
                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_marginBottom="120dp"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>